    <script>
        function refreshPage() {
            if (window.localStorage.getItem("refreshed") === null) {
                window.localStorage.setItem("refreshed", "true");
                window.location.reload();
            } else {
                window.localStorage.removeItem("refreshed");
            }
        }
    </script>
